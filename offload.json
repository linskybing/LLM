{
  "train_batch_size": 1,
  "train_micro_batch_size_per_gpu": 1,
  "steps_per_print": 10,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 1e-5
    }
  },
  "fp16": {
    "enabled": true,
    "loss_scale": 1024,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 1
  },
  "zero_optimization": {
      "stage": 2,
      "offload_param": {
          "device": "cpu", 
          "pin_memory": true
      },
      "offload_optimizer": {
          "device": "cpu",
          "pin_memory": true
      },
      "overlap_comm": true,
      "contiguous_gradients": true,
      "reduce_bucket_size": 500000000,
      "prefetch_bucket_size": 50000000
  }
}
