{
  "train_batch_size": 8,
  "train_micro_batch_size_per_gpu": 1,
  "steps_per_print": 1,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 1e-5,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.0
    }
  },
  "fp16": {
    "enabled": true,
    "loss_scale": 1024,
    "initial_scale_power": 10
  },
  "zero_optimization": {
      "stage": 1,
      "overlap_comm": true,
      "contiguous_gradients": true,
      "reduce_bucket_size": 2e8,
      "prefetch_bucket_size": 2e8,
      "offload_optimizer": {
          "device": "cpu",
          "pin_memory": true
      },
      "offload_param": {
        "device": "cpu",
        "pin_memory": true
      },
  },
}
