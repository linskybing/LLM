{
  "train_batch_size": 2,
  "train_micro_batch_size_per_gpu": 1,
  "steps_per_print": 1,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 1e-5,
      "betas": [
        0.8,
        0.999
      ],
      "eps": 1e-8,
      "weight_decay": 3e-7
    }
  },
  "fp16": {
    "enabled": true,
    "loss_scale": 20,
    "loss_scale_window": 1000,
    "initial_scale_power": 12
  },
  "gradient_checkpointing": {
    "enable": true
  }
}